# Pattern Server Environment Configuration - HTTP Transport
# Copy this to .env and update values

# Database
DATABASE_PATH=pattern.db

# Discord Bot (optional)
DISCORD_TOKEN=your_discord_bot_token_here
# APP_ID=1234567890123456789
# DISCORD_CHANNEL_ID=123456789012345678

# Letta Configuration
LETTA_BASE_URL=http://localhost:8000
# LETTA_API_KEY=your_letta_cloud_key

# MCP Server Configuration
MCP_ENABLED=true
# Transport options: stdio, sse, http
MCP_TRANSPORT=http
MCP_PORT=8080

# Logging
RUST_LOG=pattern=debug,letta=debug,discord=info,rmcp=debug